{
    "[nix]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "jnoortheen.nix-ide"
    },
    "nix.serverPath": "nixd",
    "nix.enableLanguageServer": true,
    "nix.serverSettings": {
        "nixd": {
            "nixpkgs": {
                "expr": "(import /home/hana/flake/.vscode/nixd-workspace.nix { path = \"${workspaceFolder}\"; }).pkgs"
            },
            "formatting": {
                "command": [ "nixfmt" ]
            },
            "options": {
                "nixos": {
                    "expr": "(import /home/hana/flake/.vscode/nixd-workspace.nix { path = \"${workspaceFolder}\"; }).options"
                },

                "home-manager": {
                    "expr": "(import /home/hana/flake/.vscode/nixd-workspace.nix { path = \"${workspaceFolder}\"; }).homeOptions"
                }
            }
        }
    },
    "yaml.format.singleQuote": true,
    "[yaml]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "redhat.vscode-yaml",
        "editor.insertSpaces": true
    },
    "[json]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "emeraldwalk.runonsave": {
        "shell": "bash",
        "commands": [
            {
                "match": "\\.nix$",
                "cmd": "nixfmt \"${file}\"",
            },
        ],
    }
}
